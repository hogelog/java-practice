<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.FileAppender">
        <file>target/file.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>